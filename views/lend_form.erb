<h1 style="margin-top: 90px;">Lend out</h1>
<p></p>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="http://www.sharemarketschool.com/wp-content/uploads/2010/08/borrow-money.jpg" alt="lend" />
    </div>
    <div class="col-md-6">
      <form action="/loan" method="post" class="col-md-8">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" placeholder="Name" class="form-control">
        </div>
        <div class="form-group">
          <label for="amount">Amount</label>
          <input type="text" name="amount" id="amount" placeholder="amount" class="form-control">
        </div>
        <div class="form-group">
          <button type="submit" class="btn-primary">Get Loan</button>
        </div>
      </form>

    </div>
  </div>
</div>
